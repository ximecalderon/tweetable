<header class="header">
  <div class="container navbar">
    <%=link_to image_tag("brand/logo.png"), root_path, class: "logo"%>
    <nav>
      <ul class="navbar-links" role="list">
      <%if user_signed_in?%>
        <li>Welcome <%=current_user.username%></li>
        <li><%= link_to 'Profile', user_path(current_user), class: "link" %></li>
        <li>
          <%=link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "button button--sm button--secondary" %>
        </li>
      <%else%>
        <p>Login to start the tweeting madness!</p>
        <li><%=link_to "Login", new_user_session_path, class: "button button--sm button--primary" %></li>
      <%end%>
      </ul>
    </nav>
    </nav>
    <div class="js-navbar-menu">
      <%=image_tag "icons/menu.svg", class: "navbar__menu-icon"%>
      <%=image_tag "icons/close.svg", class: "navbar__menu-icon-close"%>
    </div>
  </div>
</header>