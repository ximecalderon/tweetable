<div id="<%= dom_id tweet %>">
  <p>
    <strong>Body:</strong>
    <%= tweet.body %>
  </p>

  <p>
    <strong>Likes count:</strong>
    <%= tweet.likes_count %>
  </p>

  <p>
    <strong>Replies: </strong>
    <%= tweet.replies_count %>
  </p>

  <p>
    <strong>Replied_to: </strong>
    <%= tweet.replied_to_id %>
  </p>

  <% if tweet.liked?(current_user) %>
    <%= button_to "Like", like_destroy_path(tweet), method: :delete %>
  <% else %>
    <%= button_to "Like", like_path(tweet) %>
  <% end %>

</div>
