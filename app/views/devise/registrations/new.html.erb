<div class="container" data-turbo="false">
  <div class="text-center">
    <h2 class="heading heading--sm">Create an account</h2>
  </div>

  <div class="login-card">
    <p class="overline text-center">continue with</p>
    <div class="social--buttons">
      <%= link_to "GITHUB", "/", class: "button button--secondary full-width" %> 
    </div>

    <p class="overline text-center mb-2">or</p>

    <div class="login-card__form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %> 
      <div class="input mb-4">
        <%= f.label :username, class:"content-xs overline"%>
        <div class="input__container">
          <%= f.text_field :username, class: "input__content",
                                          placeholder: "example" %>
        </div>
        <%= errors_for(resource, :username) %>
      </div>

      <div class="input mb-4">
        <%= f.label :email, class:"content-xs overline"%>
        <div class="input__container">
          <%= f.email_field :email, class: "input__content", placeholder:
          "example@mail.com" %>
        </div>
        <%= errors_for(resource, :email) %>
      </div>

      <div class="input mb-4">
        <%= f.label :name, class:"content-xs overline"%>
        <div class="input__container">
          <%= f.text_field :name, class: "input__content", placeholder:
          "Example Name" %>
        </div>
        <%= errors_for(resource, :name) %>
      </div>

      <div class="input mb-4">
        <%= f.label :avatar, "Avatar", class: "content-xs overline" %>
        <div>
          <%= image_tag(resource.avatar) if resource.avatar.attached? %>
          <%= f.file_field :avatar, class: "input__content"%>
        </div>
        <%=errors_for(resource, :avatar)%>
      </div>

      <div class="input mb-4">
        <%= f.label :password, class:"content-xs overline"%>
        <div class="input__container">
          <%= f.password_field :password, autocomplete: "new-password",
          class: "input__content", placeholder: "********" %>
        </div>
        <%= errors_for(resource, :password) %>
      </div>

      <div class="input mb-4">
        <%= f.label :password_confirmation, class:"content-xs overline"%>
        <div class="input__container">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "input__content", placeholder: "********" %>
        </div>
        <%= errors_for(resource, :password_confirmation) %>
      </div>

      <div class="text-center flex flex-column gap-4">
        <%= f.submit "Sign up", class: "button button--primary full-width" %>
        <p class="content-sm">Already a member?</p>
        <%= link_to "Sign In", new_user_session_path, class: "primary-500" %>
      </div>

      <% end %>
    </div>
  </div>
</div>
