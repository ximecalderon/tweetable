<div class="container">
  <div class="text-center">
    <h2 class="heading heading--sm">Edit Profile</h2>
  </div>

  <div class="login-card">
    <div class="login-card__form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
      html: { method: :put }) do |f| %> <%= render "devise/shared/error_messages",
      resource: resource %>
  
      <div class="input mb-4">
        <%= f.label :username, class:"content-xs overline"%>
        <div class="input__container">
          <%= f.text_field :username, class: "input__content", placeholder: "example"
          %>
        </div>
      </div>

      <div class="input mb-4">
        <%= f.label :email, class:"content-xs overline"%>
        <div class="input__container">
          <%= f.email_field :email, class: "input__content", placeholder:
          "example@mail.com" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="input mb-4">
        <%= f.label :password, class:"content-xs overline"%>
        <div class="input__container">
          <%= f.password_field :password, autocomplete: "new-password", class:
          "input__content", placeholder: "********" %>
        </div>
      </div>

      <div class="input mb-4">
        <%= f.label :password_confirmation, class:"content-xs overline"%>
        <div class="input__container">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "input__content", placeholder: "********" %>
        </div>
      </div>

      <div class="input mb-4">
        <%= f.label :current_password, class:"content-xs overline" %>
        <div class="input__container">
          <%= f.password_field :current_password, autocomplete: "current-password",
          class: "input__content", placeholder: "********"%>
        </div>
      </div>

      <div class="text-center">
        <div class="actions mb-4"><%= f.submit "Update", class: "button button--primary full-width" %></div>
        <%= link_to "Back", :back, class: "content-sm" %>
      </div>

      <% end %> 
    </div>
  </div>
</div>
